    <build>
        <sourceDirectory>src/main/java</sourceDirectory>
        <testSourceDirectory>src/test/java</testSourceDirectory>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>2.2</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>test-jar</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.1</version>
                <configuration>
                    <source>1.7</source>
                    <target>1.7</target>
                    <encoding>UTF-8</encoding>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>copy-dependencies</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.directory}/lib</outputDirectory>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>build-helper-maven-plugin</artifactId>
                <version>1.9</version>
                <executions>
                    <execution>
                        <id>add-source</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>add-source</goal>
                        </goals>
                        <configuration>
                            <sources>
                                <!--<source>${project.basedir}/plugin/feed</source> -->
                                <!--<source>${project.basedir}/plugin/index-more</source>-->
                                <source>${project.basedir}/plugin/scoring-opic</source>
                                <source>${project.basedir}/plugin/protocol-http</source>
                                <source>${project.basedir}/plugin/creativecommons</source>
                                <!--<source>${project.basedir}/plugin/index-metadata</source>-->
                                <source>${project.basedir}/plugin/urlnormalizer-regex</source>
                                <source>${project.basedir}/plugin/protocol-sftp</source>
                                <!--<source>${project.basedir}/plugin/parse-swf</source>-->
                                 <source>${project.basedir}/plugin/parse-html</source>
                                <!--<source>${project.basedir}/plugin/urlfilter-automaton</source>-->
                                <source>${project.basedir}/plugin/protocol-httpclient</source>
                                <source>${project.basedir}/plugin/tld</source>
                                <source>${project.basedir}/plugin/protocol-file</source>
                                <!--<source>${project.basedir}/plugin/indexer-solr</source>-->
                                <!--<source>${project.basedir}/plugin/microformats-reltag</source>-->
                                <source>${project.basedir}/plugin/urlnormalizer-basic</source>
                                <source>${project.basedir}/plugin/index-anchor</source>
                                <source>${project.basedir}/plugin/protocol-ftp</source>
                                <!--<source>${project.basedir}/plugin/subcollection</source>-->
                                <!--<source>${project.basedir}/plugin/lib-nekohtml</source>-->
                                <source>${project.basedir}/plugin/scoring-link</source>
                                <source>${project.basedir}/plugin/urlfilter-suffix</source>
                                <source>${project.basedir}/plugin/urlnormalizer-pass</source>
                                <!--<source>${project.basedir}/plugin/parse-js</source>-->
                                <source>${project.basedir}/plugin/urlfilter-domain</source>
                                <!--<source>${project.basedir}/plugin/parse-metatags</source>-->
                                <!--<source>${project.basedir}/plugin/parse-ext</source>-->
                                <!--<source>${project.basedir}/plugin/lib-xml</source>-->
                                <!--<source>${project.basedir}/plugin/nutch-extensionpoints</source>-->
                                <source>${project.basedir}/plugin/lib-regex-filter</source>
                                <source>${project.basedir}/plugin/indexer-elastic</source>
                                <source>${project.basedir}/plugin/urlfilter-regex</source>
                                <source>${project.basedir}/plugin/parse-tika</source>
                                <!--<source>${project.basedir}/plugin/parse-zip</source>-->
                                <source>${project.basedir}/plugin/lib-http</source>
                                <!--<source>${project.basedir}/plugin/language-identifier</source>-->
                                <!--<source>${project.basedir}/plugin/urlfilter-validator</source>-->
                                <source>${project.basedir}/plugin/index-basic</source>
                                <source>${project.basedir}/plugin/urlfilter-prefix</source>
                            </sources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

